@model Order

@{
    ViewData["Title"] = "Edit Order";
}

<h2>Edit Order</h2>

<form asp-action="EditOrder" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CustomerId" />
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="ProductName" />

    <div class="form-group">
        <label>Customer ID</label>
        <input class="form-control" value="@Model.CustomerId" disabled />
    </div>

    <div class="form-group">
        <label>Product ID</label>
        <input class="form-control" value="@Model.ProductId" disabled />
    </div>

    <div class="form-group">
        <label>Product Name</label>
        <input class="form-control" value="@Model.ProductName" disabled />
    </div>

    <div class="form-group">
        <label>Total Amount</label>
        <input asp-for="TotalAmount" class="form-control" />
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>
