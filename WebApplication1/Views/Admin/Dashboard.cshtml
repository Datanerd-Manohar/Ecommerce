@model AdminDashboardViewModel
@{
    ViewBag.Title = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<ul class="nav nav-tabs" id="adminTabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="customers-tab" data-bs-toggle="tab" href="#customers" role="tab">Customers</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="products-tab" data-bs-toggle="tab" href="#products" role="tab">Products</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="#orders" role="tab">Orders</a>
    </li>
</ul>


<div class="tab-content mt-3" id="adminTabContent">
    <div class="tab-pane fade show active" id="customers" role="tabpanel">
        <h4>Customers</h4>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Area</th>
                    <th>Country</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Customers)
                {
                    <tr>
                        <td>@c.Firstname</td>
                        <td>@c.Lastname</td>
                        <td>@c.Area</td>
                        <td>@c.Country</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="tab-pane fade" id="products" role="tabpanel">
        <h4>Products</h4>
        <table class="table table-bordered">
        <a href="/Products/Index" class="btn btn-primary">Add Products</a>
        <a href="/Products/Edit/1" class="btn btn-warning mt-2">Update Products</a>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Products)
                {
                    <tr>
                        <td>@p.ProductName</td>
                        <td>@p.Price</td>
                        <td>@p.Rating</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="tab-pane fade" id="orders" role="tabpanel">
        <h4>Orders</h4>
        <table class="table table-bordered">
        <a href="/Orders/Index" class="btn btn-primary">View Orders</a>
        <a href="/Orders/Edit/1" class="btn btn-warning mt-2">Update Orders</a>
    </div>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Customer ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model.Orders)
                {
                    <tr>
                        <td>@o.Id</td>
                        <td>@o.OrderDate.ToShortDateString()</td>
                        <td>@o.CustomerId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
