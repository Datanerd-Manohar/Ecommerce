@model List<Product>
@{
    ViewData["Title"] = "Products";
}
<h2>Products</h2>
<a asp-controller="Product" asp-action="Add" class="btn btn-primary mb-3">Add Products</a>
<form method="post" asp-action="Delete">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Select</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Rating</th>
            <th>Actions</th>

        </tr>
        </thead>
        @foreach (var product in Model) {
            <tr>
                <td><input type="checkbox" name="selectedIds" value="@product.ProductId" /></td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Rating</td>
                <td>
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        }
    </table>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>